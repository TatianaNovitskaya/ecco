.offer {
	background: #B00214;
	position: relative
	padding: 0;
	
	&:before {
		content: "";
		display: block;
		position: absolute;
		background: url("../images/christmas-tree.png") no-repeat
		-webkit-background-size: cover
		background-size: cover
		width: rem(513)
		top: 0
		bottom: 0
		left: 0
	}
	
	&:after {
		content: "";
		display: block;
		position: absolute;
		background: url("../images/christmas-tree.png") no-repeat
		-webkit-background-size: cover
		background-size: cover
		width: rem(513)
		top: 0
		bottom: 0
		right: 0
		transform scale(-1, 1)
	}
}

.offer__wrap {
	display: flex
	justify-content: space-between
}

.offer__column-left {
	width: 100%
	max-width: 27.33rem
}

.offer__img {
	width: rem(611)
	margin: -1.3rem 0 0 -8rem;
}

.offer__column-center, .offer__column-right {
	width: 100%
	max-width: rem(280)
}

.offer__title {
	margin-top 3.15rem
	
	h3 {
		color: #ffffff
	}
}

.offer__txt {
	margin-top: 2.5rem
	
	p {
		color: #ffffff
		font-size: rem(16);
		line-height: rem(22);
		margin-bottom: 1.25rem
	}
}

.offer__txt-description {
	margin-top: 3.2rem
	
	p {
		color: #ffffff
		font-size: rem(18);
		line-height: rem(25);
		margin-bottom: 1.5rem
	}
}

.order-form {
	input {
		width: rem(280);
		padding: 1.22rem rem(20);
		border-radius: rem(10)
		margin-bottom: rem(10)
		color: #111
		font-size: rem(18);
		line-height: 1;
		&::placeholder {
			font-size: rem(18);
			line-height: 1;
			color: #111;
			font-family: 'Open Sans', sans-serif;
			font-weight: normal
			opacity: 1
		}
	}
	button{
		border: none
		width: rem(260);
		font-family: 'Open Sans',sans-serif;
		font-size: rem(24);
		line-height: 1
		text-transform: uppercase;
		font-weight: 400;
		display: block
		padding: 1.02rem 4.38rem;
		margin: 0.3rem auto 0;
		
	}
}

.offer-form {
	margin-top: 3.8rem
	input {
		background: #ffffff
	}
}
	.offer__price{
		display: flex
		justify-content: space-between
		align-items: baseline
		margin-top: 1.6rem
		.new-price{
			font-size: rem(30);
			margin: 0 0.6rem
		}
