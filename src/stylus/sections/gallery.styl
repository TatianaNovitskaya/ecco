.gallery {
	padding: 3.5rem 0
}

.gallery__wrap {
	display: flex
	
}

.video__column {
	width: 50%
}

.gallery__title {
	text-align: center
}

.video__item {
	width: 100%
	max-width: rem(555)
	height: rem(312)
	background: url("../images/video-bg.jpg") no-repeat
	-webkit-background-size: cover
	background-size: cover
	margin: 2.5rem 0 0;
	position: relative
}

.play-svg {
	cursor: pointer;
	fill: none;
	width: rem(99);
	height: rem(71);
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 5;
	transition transform 300ms ease-in-out
	
	&:hover {
		transform: translate(-50%, -50%) scale(1.05);
	}
}

.play-icon-svg {
	width: rem(99);
	height: rem(71);
}

.video-txt {
	text-align: center
	margin-top: 2.1rem
	
	p {
		font-weight: bold
		font-size: rem(16);
		line-height: rem(22);
	}
}

.gallery__column {
	width: 50%
}

.gallery__slider {
	margin: -2.7rem 0 0 3.3rem;
	width: 100%
	max-width: 32.32rem;
	height: 34.7rem;
	
	.swiper-container {
		width: 100%
		height: 100%
	}
	
	.swiper-slide {
		width: rem(266)
		height: rem(398)
		box-shadow: 0px 15px 15px rgba(0, 0, 0, 0.1);
		z-index: 5
		position: relative
		transition transform 300ms ease-in-out
		
		&:after {
			content: "";
			display: block;
			position: absolute;
			background: rgba(54, 65, 71, 0.7);
			top: 0
			left: 0
			right: 0
			bottom: 0
			pointer-events none
			opacity: 0
			transition opacity 300ms ease-in-out
		}
		
		&:before {
			content ""
			display: block;
			position: absolute;
			background: url("../images/mouse-arrow.png") no-repeat
			-webkit-background-size: cover
			background-size: cover
			width: rem(50);
			height: rem(50);
			top: 50%
			left: 50%
			transform translate(-50%, -50%)
			z-index: 5
			pointer-events none
			opacity: 0
			transition opacity 300ms ease-in-out
		}
		
		&:hover {
			&:after, &:before {
				opacity: 1
			}
		}
	}
	
	.swiper-slide-next {
		transform: translate(-6%, 38.7%);
		z-index: 1
	}
	
	a {
		display: block
		width: 100%
		height: 100%
	}
}

.swiper-pagination-custom {
	font-weight: bold;
	font-size: 2.25rem;
	line-height: 3.07rem;
	color: #000;
	bottom: 4.8rem;
	left: 6.8rem;
	text-align: left;
}

.swiper-button-prev:after, .swiper-button-next:after {
	display: none
}

.gallery-button {
	width: rem(70)
}

.gallery-button-prev {
	top: auto
	bottom: 1.2rem;
	left: 0.65rem;
}

.gallery-button-next {
	top: auto
	bottom: 1.2rem
	right: auto
	left: 6.3rem
}